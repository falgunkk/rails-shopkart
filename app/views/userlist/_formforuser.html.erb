<h2>Sign up</h2>
<%= form_for(:user, url:  userlist_path, method: 'put') do |f| %>
<p>
    <%= f.label :Email %><br>
    <%= f.email_field :email %>
</p>
 
<p>
    <%= f.label :password %><br>
    <%=f.password_field :password %>
</p>
<p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
</p>
<p>
   	<%= f.select(:role,User.roles.keys.map{|role| [role.titleize,role]}) %>
    <%= f.submit "Save user" %>
 </p>
<%end%>



  
