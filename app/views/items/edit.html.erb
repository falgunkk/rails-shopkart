<div class = "corner">
<h2> Add an item </h2>
<%= form_for @item, :url => { :action => "update" } do |f| %>
<p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :'upload item image' %><br>
    <%=f.file_field :image %><br>
  </p>
  <p>
     <%= f.label :'End date' %><br>
     <%=f.datetime_local_field :enddate, include_seconds: true %>
  </p>
  <br>
  <p>
    <%= f.submit "save" %>
  </p>
<% end %>
</div>